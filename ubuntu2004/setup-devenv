# Required by Netplan to establish connection via wifi
sudo apt-get install -yy wpasupplicant

# Helpfull software
sudo apt-get install -yy curl git fzf openssh-server tmux zip unzip

# Docker
sudo apt-get install -yy apt-transport-https ca-certificates gnupg-agent software-properties-common
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
echo "deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list &> /dev/null
sudo apt-get install -yy docker-ce docker-ce-cli containerd.io

# Sdkman
export SDKMAN_DIR="$HOME/Soft/sdkman"
curl -fsSL https://get.sdkman.io | bash

# Drop same packages
sudo apt-get remove -yy vim-tiny
